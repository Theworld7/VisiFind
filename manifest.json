{
  "manifest_version": 3,
  "name": "寻影 - 浏览器主页",
  "version": "1.0.0",
  "description": "一个简洁美观的浏览器起始页，支持书签管理、搜索引擎切换和自定义背景",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_page": "index.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
